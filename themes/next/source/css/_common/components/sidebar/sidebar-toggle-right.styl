.sidebar-toggle {
  position: fixed;
  right: $st-position-left-right;
  bottom: 5px;
  width: 14px;
  height: 14px;
  padding: 5px;
  background: $black-deep;
  line-height: 0;
  z-index: $zindex-5;
  cursor: pointer;
  box-shadow: 0.475em 0.375em 0.75em 0 #222;
  -webkit-transform: translateZ(0);

  +tablet() {
    fixRightButton() if hexo-config('sidebar.onmobile');
    hide() if not hexo-config('sidebar.onmobile');
  }
  +mobile() {
    fixRightButton() if hexo-config('sidebar.onmobile');
    hide() if not hexo-config('sidebar.onmobile');
  }
}



.sidebar-toggle-line {
  position: relative;
  display: inline-block;
  vertical-align: top;
  height: 2px;
  width: 100%;
  background: white;
  margin-top: 3px;

  &:first-child { margin-top: 0; }
}