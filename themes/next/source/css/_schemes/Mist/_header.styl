// Header
// --------------------------------------------------
.header { background: $whitesmoke; }
.header-inner {
  padding: 25px 0 20px;

  paddingForSidebar();
  clearfix();

  +mobile() {
    width: auto;
    /* margin-bottom: 50px; */
    padding: 10px;
  }
}

.site-meta {
  float: left;
  margin-left: -20px;
  line-height: normal;
  border-radius: 6px;
  
  transition-property: background;
  the-transition();

  +mobile() {
    margin-left: 10px;
    /* margin-bottom: 5px; */
    transition-property: none;
    float: right;
  }

  .brand {
    padding: 0;
    background: none;

    +mobile() { display: block; }
  }

  .logo { display: none; }

  .site-title {
    font-size: 22px;
    font-weight: bolder;
    width: 41px;

    +mobile() { line-height: 34px; }

    &:hover {
      color: #fff;
    }
  }
}


.site-meta:hover {
  background: #888;
  /* box-shadow: inset 0.475em 0.375em 0.45em 0 #999; */
}


.logo-line-before,
.logo-line-after {
  display: block;
  overflow: hidden;
  margin: 0 auto;
  width: 75%;
  display: none;

  +mobile() { display: none; }

  i {
    position: relative;
    display: block;
    height: 2px;
    background: $black-deep;
    +mobile() { height: 3px; }
  }
}

.use-motion {
  .logo-line-before i { left: -100%; }
  .logo-line-after i { right: -100%; }
}
